@using Microsoft.AspNetCore.Identity
@using Pernicek.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right text-center">
            <li><a asp-area="" asp-controller="Catalog" asp-action="Browse"><i class="material-icons">dashboard</i>Catalog</a></li>
            <li><a data-toggle="modal" data-target="#Categories"><i class="material-icons">sort</i>Categories</a></li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><i class="material-icons" style="color: orange;">face</i>@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <a onclick="document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out" aria-hidden="true"></i>Logout</a>
            </li>
            <li><a data-toggle="modal" data-target="#basket" id="cart-box"><i class="material-icons">shopping_basket</i>Shopping bag</a></li>
            <li><a data-toggle="modal" data-target="#Search-popup"><i class="material-icons">search</i>Search</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Catalog" asp-action="Browse"><i class="material-icons">dashboard</i>Catalog</a></li>
        <li><a data-toggle="modal" data-target="#Categories"><i class="material-icons">sort</i>Categories</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Register"><i class="fa fa-user-plus" aria-hidden="true"></i>Register</a></li>
        <li><a data-toggle="modal" data-target="#logIn"><i class="fa fa-sign-in" aria-hidden="true"></i>Log in</a></li>
        <!-- <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li> -->
        <li><a data-toggle="modal" data-target="#basket"><i class="material-icons">shopping_basket</i>Shopping bag</a></li>
        <li><a data-toggle="modal" data-target="#Search-popup"><i class="material-icons">search</i>Search</a></li>
    </ul>
}
