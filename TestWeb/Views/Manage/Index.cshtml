@model IndexViewModel_1
@using Alza.Core.Identity.Dal.Entities
@{
    Layout = null;
    ViewData["Title"] = "Manage your account";
    var user = await UserManager.GetUserAsync(User);
}

@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Perníček - Manage your account</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <meta name="viewport" content="width=device-width">

    <!-- Bootstrap core CSS     -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!--  Material Dashboard CSS    -->
    <link href="~/css/material-dashboard.css" rel="stylesheet">

    <!--  CSS     -->
    <link rel="stylesheet" type="text/css" href="~/css/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />


    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

</head>
<body>
    <div class="wrapper">
        <!-- Side Nav-bar -->
        <div class="sidebar" data-active-color="orange" data-background-color="white">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index" class="simple-text">
                    Perníček
                </a>
            </div>
            <div class="sidebar-wrapper">
                <div class="user">
                    <div class="photo">
                        <img src="/images/default-avatar.png">
                    </div>
                    <div class="info">
                        <a href="#">
                            @user
                        </a>
                    </div>
                </div>
                <ul class="nav">
                    <li class="active">
                        <a data-toggle="collapse" href="#tablesExamples" aria-expanded="true">
                            <i class="material-icons">perm_identity</i>
                            <p>My Profile
                                <b class="caret"></b>
                            </p>
                        </a>
                        <div class="collapse in" id="tablesExamples">
                            <ul class="nav">
                                <li class="active">
                                    <a href="#">Profile</a>
                                </li>
                                <li>
                                    <a asp-controller="Manage" asp-action="ChangePassword">Change Password</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="sidebar-background"></div>
        </div>
        <!-- End Side Nav-bar -->
        <div class="main-panel">
            <!-- Top Nav-bar -->
            <nav class="navbar navbar-default navbar-absolute">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a asp-controller="Catalog" asp-action="Browse" class="dropdown-toggle">
                                    <i class="material-icons">dashboard</i> Catalog
                                </a>
                            </li>
                            <li class="separator hidden-lg hidden-md"></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Top Nav-bar -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <!-- Profile Tab -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header card-header-icon" data-background-color="orange">
                                    <i class="material-icons">perm_identity</i>
                                </div>
                                <div class="card-content">
                                    <h4 class="card-title">
                                        Profile
                                    </h4>
                                        <hr/>
                                        <div class="form-group label-floating is-empty">
                                            <span class="text-muted">Username</span><span class="data">@user</span>
                                        </div>
                                        <hr/>
                                        <div class="form-group label-floating is-empty">
                                            <span class="text-muted">Email Address</span> <span class="data">@user.Email</span>
                                        </div>
                                        <hr/>
                                        <div class="form-group label-floating is-empty">
                                            <span class="text-muted">First Name</span> <span class="data">@Html.DisplayFor(model => model.name)</span>
                                        </div>
                                        <hr/>
                                        <div class="form-group label-floating is-empty">
                                            <span class="text-muted">Last Name</span> <span class="data">@Html.DisplayFor(model => model.sec_name)</span>
                                        </div>
                                        <hr/>
                                        <div class="form-group label-floating is-empty">
                                            <span class="text-muted">Phone Number</span> <span class="data">@Html.DisplayFor(model => model.mobile)</span>
                                        </div>
                                        <hr/>
                                        <button data-toggle="modal" data-target="#edit-profile-tab" class="btn btn-warning pull-right">Edit</button>
                                        <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                        <!-- End Profile Tab -->
                        <!-- Shipping Details -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header card-header-icon" data-background-color="orange">
                                    <i class="material-icons">local_shipping</i>
                                </div>
                                <div class="card-content">
                                    <h4 class="card-title">
                                        Shipping Details
                                    </h4>
                                    <hr/>
                                    <div class="form-group label-floating is-empty">
                                        <span>Street</span><span class="data">@Html.DisplayFor(model => model.Address)</span>
                                    </div>
                                    <hr />
                                    <div class="form-group label-floating is-empty">
                                        <span>House Number</span><span class="data">@Html.DisplayFor(model => model.HouseNumber)</span>
                                    </div>
                                    <hr />
                                    <div class="form-group label-floating is-empty">
                                        <span>City</span><span class="data">@Html.DisplayFor(model => model.City)</span>
                                    </div>
                                    <hr />
                                    <div class="form-group label-floating is-empty">
                                        <span>Country</span><span class="data">@Html.DisplayFor(model => model.Country)</span>
                                    </div>
                                    <hr />
                                    <div class="form-group label-floating is-empty">
                                        <span>Postal Code</span><span class="data">@Html.DisplayFor(model => model.PostalCode)</span>
                                    </div>
                                    <hr/>
                            @if (ViewData["IsAddress"] != null)
                            {
                                <button class="btn btn-warning pull-right" data-toggle="modal" data-target="#edit-shipping-details">Add</button>
                                <div class="clearfix"></div>
                            }
                            else
                            {
                                    <button class="btn btn-warning pull-right" data-toggle="modal" data-target="#edit-shipping-details">Edit</button>
                                    <div class="clearfix"></div>
                            }
                                </div>
                            </div>
                        </div>
                        <!-- End Shipping Details -->
                    </div>
                        <!-- Purchase History -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header card-header-icon" data-background-color="orange">
                                    <i class="material-icons">list</i>
                                </div>
                                <div class="card-content">
                                    <h4 class="card-title">Purchase History</h4>
                                    <div class="table-responsive">
                                       <table class="table">
                                            <thead class="text-warning">
                                                <th>#</th>
                                                <th>ID</th>
                                                <th>Date</th>
                                                <th>Total price</th>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.OrderDetails)
                                                {
                                                <tr>
                                                    <td>@item.tmpCount</td>
                                                    <td><a asp-controller="Manage" asp-action="PurchaseHistory" asp-route-id_ord="@item.id_ord">@item.id_ord</a></td>
                                                    <td>@item.date</td>
                                                    <td class="text-warning">@item.Price</td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- End Purchase History -->
                        </div>
                    </div>
                    <!-- Wishlist -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header card-header-icon" data-background-color="orange">
                                    <i class="material-icons">star</i>
                                </div>
                                <div class="card-content">
                                    <h4 class="card-title">Wishlist</h4>
                                    <div class="table-responsive">
                                       <table class="table table-shopping">
                                            <thead>
                                                <tr>
                                                    <th class="text-center"></th>
                                                    <th>Product</th>
                                                    <th class="th-description text-center">Color</th>
                                                    <th class="th-description text-center">Size</th>
                                                    <th class="text-center">Price</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <div class="img-container">
                                                            <img src="../../assets/img/product1.jpg" alt="...">
                                                        </div>
                                                    </td>
                                                    <td class="td-name">
                                                        <a href="#jacket">Spring Jacket</a>
                                                        <br />
                                                        <small>by Dolce&Gabbana</small>
                                                    </td>
                                                    <td class="table-number text-center">
                                                        Red
                                                    </td>
                                                    <td class="table-number text-center">
                                                        M
                                                    </td>
                                                    <td class="table-number text-center">
                                                        <small>&euro;</small>549
                                                    </td>
                                                    <td class="td-actions">
                                                        <button type="button" rel="tooltip" data-placement="left" title="Remove item" class="btn btn-simple">
                                                            <i class="material-icons">close</i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Wishlist -->
                        </div>
                    </div>
        </div>
    </div>

                        <!-- Edit Profile Tab -->
                        <div class="modal fade" id="edit-profile-tab" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog" style="margin-top: 10%;">
                            <div class="card">
                                <div class="card-header card-header-icon" data-background-color="orange">
                                    <i class="material-icons">perm_identity</i>
                                </div>
                                <div class="card-content">
                                    <h4 class="card-title">
                                        Edit Profile -
                                        <small class="category">Complete your profile</small>
                                    </h4>
                                    <form asp-controller="Manage" asp-action="Edit" method="post" class="form-horizontal">
                                        <div class="form-group label-floating">
                                            <label asp-for="user" class="control-label">Username</label>
                                            <input asp-for="user" type="text" class="form-control">
                                            <span class="material-input"></span>
                                        </div>
                                        <div class="form-group label-floating">
                                            <label class="control-label">Email address</label>
                                            <input asp-for="email" type="email" class="form-control">
                                            <span class="material-input"></span>
                                        </div>
                                        <div class="form-group label-floating">
                                            <label class="control-label">Fist Name</label>
                                            <input asp-for="name" type="text" class="form-control">
                                            <span class="material-input"></span>
                                        </div>
                                        <div class="form-group label-floating">
                                            <label class="control-label">Last Name</label>
                                            <input asp-for="sec_name" type="text" class="form-control">
                                            <span class="material-input"></span>
                                        </div>
                                        <div class="form-group label-floating">
                                            <label class="control-label">Phone Number</label>
                                            <input asp-for="mobile" type="tel" class="form-control">
                                            <span class="material-input"></span>
                                        </div>
                                        <button type="submit" class="btn btn-warning pull-right">Save Changes</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                            </div>
                        </div>
                        <!-- End Edit Profile Tab -->
                        <!-- Edit Shipping Details -->
                        <div class="modal fade" id="edit-shipping-details" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog" style="margin-top: 10%;">
                            <div class="card">
                                <div class="card-header card-header-icon" data-background-color="orange">
                                    <i class="material-icons">local_shipping</i>
                                </div>
                                <div class="card-content">
                                    <h4 class="card-title">
                                        Edit Shipping Details -
                                        <small class="category">Add your address</small>
                                    </h4>
                                    <form asp-controller="Manage" asp-action="EditAddress" method="post">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Street</label>
                                            <input asp-for="Address" type="text" class="form-control">
                                            <span class="material-input"></span>
                                        </div>
                                        <div class="form-group label-floating">
                                            <label class="control-label">House Number</label>
                                            <input asp-for="HouseNumber" type="text" class="form-control">
                                            <span class="material-input"></span>
                                        </div>
                                        <div class="form-group label-floating">
                                            <label class="control-label">City</label>
                                            <input asp-for="City" type="text" class="form-control">
                                            <span class="material-input"></span>
                                        </div>
                                        <div class="form-group label-floating is-empty">
                                            <label class="control-label">Country</label>
                                            <select name="Country" class="form-control">
                                                <option disabled="" selected=""></option>
                                                @foreach (var country in Model.Countries)
                                                {
                                                    <option value="@country.code">@country.name</option>

                                                }
                                            </select>
                                            <span class="material-input"></span>
                                        </div>



                                        <div class="form-group label-floating">
                                            <label asp-for="PostalCode" class="control-label">Postal Code</label>
                                            <input asp-for="PostalCode" type="text" class="form-control">
                                            <span class="material-input"></span>
                                        </div>

                                        <button type="submit" class="btn btn-warning pull-right">Save Changes</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                            </div>
                        </div>
                        <!-- End Edit Shipping Details -->

    <!--   Core JS Files   -->
    <script src="~/js/dashboard/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="~/js/dashboard/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/js/dashboard/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/dashboard/material.min.js" type="text/javascript"></script>
    <!-- Forms Validations Plugin -->
    <script src="~/js/dashboard/jquery.validate.min.js"></script>
    <!--   Sharrre Library    -->
    <script src="~/js/dashboard/jquery.sharrre.js"></script>
    <!-- Select Plugin -->
    <script src="~/js/dashboard/jquery.select-bootstrap.js"></script>
    <!-- TagsInput Plugin -->
    <script src="~/js/dashboard/jquery.tagsinput.js"></script>
    <!-- Material Dashboard javascript methods -->
    <script src="~/js/dashboard/material-dashboard.js"></script>

</body>
</html>