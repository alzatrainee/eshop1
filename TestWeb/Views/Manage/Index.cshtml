@model LoginViewModel
@{
    ViewData["Title"] = "Manage your account";
}
@inject UserManager<ApplicationUser> UserManager
<div class="header" id="profile-header" style="padding-top: 250px; padding-bottom: 250px; background-color: purple;">
    <div class="container">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
                <div class="card card-signup custom-box-shadow">
                        <div class="header text-center custom-header">
                            <h4>Account</h4>
                        </div>
                        <!-- Account details -->
                        <h4 class="text-divider">Account details</h4>
                        <div class="content text-right">
                            <a class="number">Edit</a>
                        </div>
                        <div class="content">
                            <hr />
                            <p>@UserManager.GetUserName(User)</p>
                            <p>@Html.DisplayFor(model => model.sec_name)</p>
                        </div>
                        <!-- End account details -->
                        <!-- Personal details -->
                        <h4 class="text-divider">Personal details</h4>
                        <div class="content text-right">
                            <a class="number">Edit</a>
                        </div>
                        <div class="content">
                            <hr />
                            <p>First name</p>
                            <p>Last name</p>
                            <p>Phone number</p>
                        </div>
                        <!-- End Personal details -->
                        <!-- Shipping details -->
                        <h4 class="text-divider">Shipping details</h4>
                        <div class="content text-right">
                            <a class="number">Edit</a>
                        </div>
                        <div class="content">
                            <hr />
                        </div>
                        <!-- End Shipping details -->
                        <!-- Orders -->
                        <h4 class="text-divider">Oders</h4>
                        <div class="content">
                            <hr />
                        </div>
                        <!-- End Orders -->
                </div>
            </div>
        </div>
        <h4>Change your account settings</h4>
        <hr />
       
    </div>
</div>