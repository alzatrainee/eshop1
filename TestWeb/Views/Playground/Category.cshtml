@model IEnumerable<PernicekWeb.Models.PlaygroundViewModels.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<td>
    <a asp-controller="Playground" asp-action="CategoryFilter" asp-route-id=@ViewData["Category"] asp-route-ide ="0">Filter firms</a>
</td>

<div class="checkbox">
    <a asp-controller="Playground" asp-action="FilterAll" asp-route-ide="0">VS</a>
    <a asp-controller="Playground" asp-action="FilterAll" asp-route-ide="2">Dvojka</a>
</div>

    <table class="table">
        <tbody>

           
                @foreach (var item in Model)
            {
                    
                        <tr>
                            <td>
                                <a asp-controller="Item" asp-action="Index" asp-route-id=@item.id_pr>@Html.DisplayFor(modelItem => item.name)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.firm)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.price)
                            </td>
                            <td>
                                <img src="@item.image" alt="Pic" />

                            </td>
                        </tr>
                    
                }
                   


</tbody>
    </table>
