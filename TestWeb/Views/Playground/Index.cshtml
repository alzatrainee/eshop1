@model PlaygroundViewModel

<form asp-controller="Playground" asp-action="Index" method="post" class="form-horizontal" role="form">
    <fieldset class="form-group">
        <h3>Checkbox List</h3>
        <h3>Checkbox List</h3>
        <legend class="col-sm-3 control-label"></legend>
        <div class="checkbox checkboxlist col-sm-9">
            @{
                for (int i = 0; i < Model.Firms.Count(); i++)
                {
                    <label>
                        <input asp-for="@Model.Firms[i].checkboxAnswer" type="checkbox" />
                        <label asp-for="@Model.Firms[i].id_fir">@Model.Firms[i].name</label>
                        <input asp-for="@Model.Firms[i].id_fir" type="hidden" />
                        <input asp-for="@Model.Firms[i].name" type="hidden" />
                    </label>
                    <br />
                }
            }
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <input id="Submit1" type="submit" value="submit" />
                </div>
            </div>
        </div>
    </fieldset>
</form>
