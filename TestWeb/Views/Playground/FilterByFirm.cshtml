@model IEnumerable<PernicekWeb.Models.PlaygroundViewModels.Product>




<h2>Index</h2>
<h2>Index</h2>

<div class="checkbox">
    <a asp-controller="Playground" asp-action="FilterAll" asp-route-ide="0">VS</a>
    <a asp-controller="Playground" asp-action="FilterAll" asp-route-ide=@ViewData["Firmy"] asp-route-id="2">Dvojka</a>
</div>

<table class="table">
    <tbody>



        @foreach (var item in Model)
        {

            <tr>
                <td>
                    <a asp-controller="Item" asp-action="Index" asp-route-id=@item.id_pr>@Html.DisplayFor(modelItem => item.name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.firm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    <a asp-controller="Item" asp-action="Index" asp-route-id=@item.id_pr><img src="@item.image" alt="Pic" /></a>

                </td>
            </tr>

        }



    </tbody>
</table>