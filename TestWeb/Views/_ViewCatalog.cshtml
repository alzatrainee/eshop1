@using Catalog.Dal.Entities
@using PernicekWeb.Models.ManageViewModels
@model PernicekWeb.Models.ManageViewModels.CatalogViewModel
@{
    ViewBag.Title = "Home Page";
}
<h2>@ViewBag.Message</h2>

<p><b>Product List</b></p>

<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    @foreach (Product product in Models.Products)
    {
        <tr>
            <td>@product.id_pr</td>
            <td>@product.name</td>
            <td>@product.price</td>
        </tr>
    }
</table>